[colors]
background = #0F1418
background-alt = #0F1418
foreground = #e6e7e7
foreground-alt = #e6e7e7
primary = #0F1418
secondary = #7D8185
alert = #8D9093

[bar/openbox]
width = 80%
height = 20
offset-x = 10%
offset-y = 0%
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #fff

border-size = 0
border-color = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = Tamsyn:pixelsize=11;0
font-1 = Roboto:size=11:weight=bold:antialias=true;0
font-2 = JetBrains Mono Nerd Font:pixelsize=11:antialias=true;0

modules-left = ewmh filesystem wlan eth
modules-center = date
modules-right = alsa cpu memory temperature powermenu

tray-position = right
tray-padding = 1
tray-background = ${colors.background}

override-redirect = true
wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

[module/filesystem]
type = internal/fs
interval = 3600

mount-0 = /
mount-1 = /home

label-mounted = %{F#8D9093}%mountpoint%%{F-}: %percentage_used%%
label-unmounted =
label-unmounted-foreground = ${colors.foreground}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
